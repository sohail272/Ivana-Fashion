<div class="content-wrapper product_panel">
  <div class="container-fluid header_wrapper">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <h1>Products</h1>
      </li>
    </ol>
  </div>

  <div class="container-fluid">
    <div class="col-12">
      <div class="card mb-3">
        <div class="card-body">
          <div class="table-responsive">
            <%=link_to "ADD PRODUCT", new_admin_product_path(current_admin), class: "btn btn-primary float-right m-2"%></br>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th scope="col">No</th>
                  <th scope="col">Product Number</th>
                  <th scope="col">Product Date</th>
                  <th scope="col">Last Updated</th>
                  <th scope="col">Product Name</th>
                  <th scope="col">Product Price</th>
                </tr>
              </thead>
              <tbody>
                <%if @products%>
                  <%@products.each_with_index do |product, index|%>
                  <tr>
                    <th scope="row"><%= index + 1 %>.</th>
                      <td>
                        <%= link_to product.id ,admin_product_path(current_admin, product) %>
                      </td>
                    <td><%=product.created_at.strftime('%d-%m-%Y')%></td>
                    <td><%=product.updated_at.strftime('%d-%m-%Y')%></td>
                    <td><%=product.name%></td>
                    <td><%=product.price%></td>
                    <td>
                      <div data-turbolinks="false">
                      <%= link_to edit_admin_product_path(current_admin, product) do %>
                        <span class="icon-edit">&nbsp;Edit</span>
                      <% end %> 
                      </div>
                    </td>
                  </tr>
                  <%end%>
                <%end%>
              </tbody>
            </table>
            <div class="pull-right digg_pagination">
              <%#= will_paginate @products if @products %> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
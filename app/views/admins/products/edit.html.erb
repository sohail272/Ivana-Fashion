<div class="content-wrapper">
  <div class="container-fluid header_wrapper">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <h1>New Product</h1>
      </li>
    </ol>
  </div>
  <div class="container">
    <%= simple_form_for [:admin, @product] do |f| %>
      <%= f.input :image, as: :file, label: "Image" %>
      <%= f.input :name, label: "Name" %>
      <%= f.input :description, label: "Description" %>
      <%= f.input :price, label: "Price" %>
      <%= f.input :new_product, label: "New Product" %>
      <%= f.input :has_sale, label: "Sale" %>
      <%= f.input :giftable, label: "Giftable" %>
      <%= f.input :product_color, label: "Color" %>
      <%= f.input :product_brand, label: "Brand" %>
      <%= f.input :product_size, label: "Size" %>
      <%= f.submit "UPDATE PRODUCT",class:'btn btn-primary' %>
    <% end %>
  </div>
</div>
